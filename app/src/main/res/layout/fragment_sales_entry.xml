<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SalesEntryFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_8dp_margin"
                    android:gravity="center|bottom">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sales_entry_data_height"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:textColor="@color/text_main"
                            android:gravity="center"
                            android:text="Items"
                            android:layout_marginEnd="@dimen/_4dp_margin"
                            />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/sale_entry_ED_bg_color"
                            android:layout_weight="7"
                            android:maxLines="4"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/space_bw_sales_data_block"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sales_entry_data_height"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:textColor="@color/text_main"
                            android:gravity="center"
                            android:text="Gross Weight"
                            android:layout_marginEnd="@dimen/_4dp_margin"
                            />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/sale_entry_ED_bg_color"
                            android:layout_weight="7"
                            android:inputType="numberDecimal"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/space_bw_sales_data_block"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sales_entry_data_height"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:textColor="@color/text_main"
                            android:gravity="center"
                            android:text="Net Weight"
                            android:layout_marginEnd="@dimen/_4dp_margin"
                            />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/sale_entry_ED_bg_color"
                            android:layout_weight="7"
                            android:editable="false"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/space_bw_sales_data_block"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sales_entry_data_height"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:textColor="@color/text_main"
                            android:gravity="center"
                            android:text="Rate"
                            android:layout_marginEnd="@dimen/_4dp_margin"
                            />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/sale_entry_ED_bg_color"
                            android:layout_weight="7"
                            android:inputType="number"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/space_bw_sales_data_block"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sales_entry_data_height"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:textColor="@color/text_main"
                            android:gravity="center"
                            android:text="Amount"
                            android:layout_marginEnd="@dimen/_4dp_margin"
                            />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/sale_entry_ED_bg_color"
                            android:layout_weight="7"
                            android:editable="false"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/space_bw_sales_data_block"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sales_entry_data_height"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:textColor="@color/text_main"
                            android:gravity="center"
                            android:text="Customer Name"
                            android:layout_marginEnd="@dimen/_4dp_margin"
                            />

                        <AutoCompleteTextView
                            android:id="@+id/autoCompleteTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:background="@color/sale_entry_ED_bg_color"
                            tools:text="AutoCompleteTextView"/>



                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </FrameLayout>
</layout>