<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="party"
            type="Integer" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/ed_received_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16dp_margin"
            android:layout_marginTop="@dimen/_8dp_margin"
            android:layout_marginEnd="@dimen/_16dp_margin"
            android:textSize="18sp"
            android:hint="Received Date"
            android:inputType="date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/ed_sales_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16dp_margin"
            android:textSize="18sp"
            android:hint="Sales Date"
            android:inputType="date"
            app:layout_constraintEnd_toEndOf="@+id/ed_received_date"
            app:layout_constraintStart_toStartOf="@id/ed_received_date"
            app:layout_constraintTop_toBottomOf="@id/ed_received_date" />

        <Spinner
            android:id="@+id/trademark_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16dp_margin"
            android:entries="@array/sample_autocomplete_text_list"
            app:layout_constraintEnd_toEndOf="@+id/ed_sales_date"
            app:layout_constraintStart_toStartOf="@+id/ed_sales_date"
            app:layout_constraintTop_toBottomOf="@+id/ed_sales_date" />

        <Spinner
            android:id="@+id/no_of_box_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16dp_margin"
            android:entries="@array/no_1_to_50"
            app:layout_constraintStart_toStartOf="@+id/trademark_spinner"
            app:layout_constraintTop_toBottomOf="@+id/trademark_spinner" />

        <Spinner
            android:id="@+id/box_type_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="@+id/trademark_spinner"
            android:entries="@array/transportation_mode"
            app:layout_constraintStart_toEndOf="@+id/no_of_box_spinner"
            app:layout_constraintTop_toTopOf="@+id/no_of_box_spinner" />

        <AutoCompleteTextView
            android:id="@+id/ed_transport_medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16dp_margin"
            app:layout_constraintEnd_toEndOf="@+id/box_type_spinner"
            app:layout_constraintStart_toStartOf="@+id/no_of_box_spinner"
            app:layout_constraintTop_toBottomOf="@+id/no_of_box_spinner" />

        <EditText
            android:id="@+id/ed_transport_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toEndOf="@+id/ed_transport_medium"
            app:layout_constraintStart_toStartOf="@+id/ed_transport_medium"
            app:layout_constraintTop_toBottomOf="@+id/ed_transport_medium" />

        <Button
            android:id="@+id/proceed_with_header_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_32dp_margin"
            android:layout_marginEnd="@dimen/_32dp_margin"
            android:layout_marginBottom="@dimen/_32dp_margin"
            android:text="Proceed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>